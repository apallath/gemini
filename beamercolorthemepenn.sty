% Penn color scheme for Gemini
% https://github.com/apallath/gemini_penn
% Fork of the Gemini theme by @anishathalye
% https://github.com/anishathalye/gemini

% ====================
% Definitions
% ====================

\definecolor{pennblue}{RGB}{001,031, 091}
\definecolor{pennred}{RGB}{153,000,000}

% Extra colors
\definecolor{pennlightblue}{RGB}{130, 175, 211}
\definecolor{pennorange}{RGB}{195, 90, 0}
\definecolor{penngreen}{RGB}{0, 142, 0}
\definecolor{pennyellow}{RGB}{242, 193, 0}
\definecolor{pennpurple}{RGB}{74, 0, 66}
\definecolor{penngray1}{RGB}{247, 247, 247}
\definecolor{penngray2}{RGB}{242, 242, 242}
\definecolor{penngray3}{RGB}{204, 204, 204}
\definecolor{penngray4}{RGB}{153, 153, 153}
\definecolor{penngray5}{RGB}{51, 51, 51}

% ====================
% Theme
% ====================

\setbeamercolor{background canvas}{bg=pennred}

% Basic colors
\setbeamercolor{palette primary}{fg=black,bg=white}
\setbeamercolor{palette secondary}{fg=black,bg=white}
\setbeamercolor{palette tertiary}{bg=black,fg=white}
\setbeamercolor{palette quaternary}{fg=black,bg=white}
\setbeamercolor{structure}{fg=pennblue}

% Headline
\setbeamercolor{headline}{fg=white,bg=pennblue}
\setbeamercolor{headline rule}{bg=black}

% Block
\setbeamercolor{block title}{fg=white,bg=pennblue}
\setbeamercolor{block body}{fg=black,bg=white}

% Alert Block
\setbeamercolor{block alerted title}{fg=white,bg=penngreen}
\setbeamercolor{block alerted body}{fg=black,bg=penngray1}

% Example Block
\setbeamercolor{block example title}{fg=white,bg=pennpurple}
\setbeamercolor{block example body}{fg=black,bg=penngray1}

% Heading
\setbeamercolor{heading}{fg=black}

% Itemize
\setbeamercolor{item}{fg=pennblue}

% Bibliography
\setbeamercolor{bibliography item}{fg=black}
\setbeamercolor{bibliography entry author}{fg=black}
\setbeamercolor{bibliography entry title}{fg=black}
\setbeamercolor{bibliography entry location}{fg=black}
\setbeamercolor{bibliography entry note}{fg=black}
